<configuration>

  <configSections>
    <sectionGroup name="remotion.data.domainObjects" type="Remotion.Data.DomainObjects.Configuration.DomainObjectsConfiguration, Remotion.Data.DomainObjects">
      <section name="storage" type="Remotion.Data.DomainObjects.Persistence.Configuration.PersistenceConfiguration, Remotion.Data.DomainObjects" />
      <section name="mapping" type="Remotion.Data.DomainObjects.Mapping.Configuration.MappingLoaderConfiguration, Remotion.Data.DomainObjects" />
    </sectionGroup>
  </configSections>

  <remotion.data.domainObjects xmlns="http://www.re-motion.org/Data/DomainObjects/Configuration/2.0">
    <mapping>
      <loader type="Remotion.Data.DomainObjects.UnitTests::DomainObjects.Configuration.Mapping.FakeMappingLoader"/>
    </mapping>
    <storage defaultProviderDefinition="TestDomain">
      <providerDefinitions>
        <add type="Remotion.Data.DomainObjects::Persistence.Rdbms.RdbmsProviderDefinition"
            name="TestDomain"
            providerType="Remotion.Data.DomainObjects::Persistence.Rdbms.SqlProvider"
            connectionString="Test"/>
      </providerDefinitions>
    </storage>
  </remotion.data.domainObjects>

  <connectionStrings>
    <add name="Test" connectionString="Integrated Security=SSPI;Initial Catalog=Test;Data Source=localhost" />
  </connectionStrings>
</configuration>
