<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <InsertSvnDataTool>$(SolutionDirectory)prereq\Tools\SymbolServer\InsertSvnData.exe</InsertSvnDataTool>
  </PropertyGroup>

  <Target Name="UpdateDebugSymbols">
    <Error Text="The property 'SvnRevision' is not set." Condition="'$(SvnRevision)' == ''" />
    <Error Text="The property 'DebugSymbolsVCSUrl' is not set." Condition="'$(DebugSymbolsVCSUrl)' == ''" />

    <ItemGroup>
      <PdbFiles Include="$(BinariesDirectory)**\Remotion*.dll" Exclude="$(BinariesDirectory)**\*resources.dll" />
      <PdbFiles Include="$(BinariesDirectory)**\*.exe" />
    </ItemGroup>

    <Message Text="Starting .pdb file indexing." />
    <Exec Command="&quot;$(InsertSvnDataTool)&quot; /pdbFile:&quot;%(PdbFiles.Identity)&quot; /revision:$(SvnRevision) /svnRootUrl:&quot;$(DebugSymbolsVCSUrl)&quot; /projectRoot:&quot;$(SolutionDirectory)&quot;" />
    <Message Text="Finished .pdb file indexing." />
  </Target>
  
</Project>