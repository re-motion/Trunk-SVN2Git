<Project DefaultTargets="DependDB" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

    <Import Project="Remotion.Packages.include.build" />
    
    <PropertyGroup>
        <SolutionDirectory>$(MSBuildProjectDirectory)\..\</SolutionDirectory>
        <TempDirectory>$(MSBuildProjectDirectory)\BuildOutput\temp\</TempDirectory>
        <DependDBDirectory>$(MSBuildProjectDirectory)\BuildOutput\DependDB\</DependDBDirectory>
        <BinariesDirectory>$(TempDirectory)Binaries\</BinariesDirectory>
    </PropertyGroup>

    <Target Name="DependDB">
        <MSBuild Projects="%(AllPackages.PackageDeclaration)"
             BuildInParallel="false"
             Targets="UploadToDependDB"
             Properties="
                 SolutionDirectory=$(SolutionDirectory);
                 BinariesDirectory=$(BinariesDirectory);
                 DependDBProjectBranch=AN Branch;
                 DependDBProjectVersion=1.13.166.2;
                 DependDBUploadPath=C:\watch;
                 DependDBProjectVCSUrlTemplate=https://svn.re-motion.org:443/svn/Remotion/!svn/bc/$(ProjectRevision)/branches/ActaNova/trunk/{0};
                 DependDBProjectImportNotificationMailAddress=dominik.rauch@rubicon.eu;
                 DependDBDirectory=$(DependDBDirectory)"/>
  </Target>

</Project>