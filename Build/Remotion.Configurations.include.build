<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <ItemGroup>
    <AllConfigurations Include="Release">
      <Name>Release</Name>
      <Framework>net-4.5</Framework>
      <OutputDirectory>net-4.5\bin\release\</OutputDirectory>
    </AllConfigurations>

    <AllConfigurations Include="Debug">
      <Name>Debug</Name>
      <Framework>net-4.5</Framework>
      <OutputDirectory>net-4.5\bin\debug\</OutputDirectory>
    </AllConfigurations>
  </ItemGroup>
    
  <Target Name="CreateTestConfigurations">

    <Error Text="'Platforms' was not defined." Condition="'$(Platforms)' == ''" />
    <ItemGroup>
      <PlatformsList Include="$(Platforms.Split('+'))" />
    </ItemGroup>
    
    <Error Text="'DatabaseSystems' was not defined." Condition="'$(DatabaseSystems)' == ''" />
    <ItemGroup>
      <DatabaseSystemsList Include="$(DatabaseSystems.Split('+'))" />
    </ItemGroup>

    <ItemGroup>
      <BrowsersList Include="$(Browsers.Split('+'))" />
    </ItemGroup>

    
    <ItemGroup>
      <AllPlatforms Include="x86" Condition="'%(PlatformsList.Identity)' == 'x86'">
        <Use32Bit>True</Use32Bit>
      </AllPlatforms>
      
      <AllPlatforms Include="x64" Condition="'%(PlatformsList.Identity)' == 'x64'">
        <Use32Bit>False</Use32Bit>
      </AllPlatforms>
    </ItemGroup>

    <ItemGroup>
      <AllDatabaseSystems Include="SqlServerDefault" Condition="'%(DatabaseSystemsList.Identity)' == 'SqlServerDefault'">
        <DataSource>localhost</DataSource>
        <DatabaseDirectory>C:\Databases</DatabaseDirectory>
      </AllDatabaseSystems>
        
      <AllDatabaseSystems Include="SqlServer2005" Condition="'%(DatabaseSystemsList.Identity)' == 'SqlServer2005'">
        <DataSource>localhost\MSSQL2005</DataSource>
        <DatabaseDirectory>C:\Databases\MsSql2005</DatabaseDirectory>
      </AllDatabaseSystems>

      <AllDatabaseSystems Include="SqlServer2008" Condition="'%(DatabaseSystemsList.Identity)' == 'SqlServer2008'">
        <DataSource>localhost\MSSQL2008</DataSource>
        <DatabaseDirectory>C:\Databases\MsSql2008</DatabaseDirectory>
      </AllDatabaseSystems>

      <AllDatabaseSystems Include="SqlServer2008R2" Condition="'%(DatabaseSystemsList.Identity)' == 'SqlServer2008R2'">
        <DataSource>localhost\MSSQL2008R2</DataSource>
        <DatabaseDirectory>C:\Databases\MsSql2008R2</DatabaseDirectory>
      </AllDatabaseSystems>

      <AllDatabaseSystems Include="SqlServer2012" Condition="'%(DatabaseSystemsList.Identity)' == 'SqlServer2012'">
        <DataSource>localhost\MSSQL2012</DataSource>
        <DatabaseDirectory>C:\Databases\MsSql2012</DatabaseDirectory>
      </AllDatabaseSystems>

      <AllDatabaseSystems Include="SqlServer2014" Condition="'%(DatabaseSystemsList.Identity)' == 'SqlServer2014'">
        <DataSource>localhost\MSSQL2014</DataSource>
        <DatabaseDirectory>C:\Databases\MsSql2014</DatabaseDirectory>
      </AllDatabaseSystems>
    </ItemGroup>

    <ItemGroup>
      <AllBrowsers Include="Chrome" Condition="'%(BrowsersList.Identity)' == 'Chrome'" />
      <AllBrowsers Include="InternetExplorer" Condition="'%(BrowsersList.Identity)' == 'InternetExplorer'" />
    </ItemGroup>
  
  </Target>

</Project>